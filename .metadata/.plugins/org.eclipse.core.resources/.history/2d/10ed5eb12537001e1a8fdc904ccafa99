package array_test;

import java.util.*;

//원시배열 + 조건문 + 반복문
public class array2 {

	public static void main(String[] args) {
		array2 ar = new array2();
		ar.test();
		// new array2().test(); 이것도 같음
	}
	
	public void test() {
		String id[] = {"hong","kim","park","lee","jang","so"};
		//힌트
		int word = id[0].length();
		System.out.println("첫번째 글자 수" + word);  //4
		/*
		 응용문제1
		 해당 사용자 아이디 배열값 중 아이디가 3자리 이하의 사용자만 출력하시오. 
		 */
		int word2 = id.length;
		System.out.println("id에 배열 수" + word2);  //6
		int word3 = id.length;
		System.out.println(Arrays.toString(id));
	}

}
