package array_test;

import java.util.Arrays;

//1차 배열 중 필요한 데이터만 추출하여 신규 배열로 커스텀
public class array4 {

	public static void main(String[] args) {
		new array4().test2();
	}
	
	public void test2() {
		int a[] = new int[5];
		int b[] = {1,2,3,4,5,6,7};
		int w = 0;                // 배열은 무조건 0부터 시작해서 들어가야한다.
		int array = 0;
		while(w < b.length) {
			if(b[w] % 2 == 0 && array < a.length) {
				a[array] = b[w];     //a[w]를 넣으면 0,2번 순서로 올라 1번이 빠진다. array를 넣어 차츰 증가시긴다
				array++;
			}
			w++;
		}
		System.out.println(Arrays.toString(a));
	}

}
